{
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "types": [],
    "alwaysStrict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6", "es7", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./.build",
    "rootDir": "./",
    "skipLibCheck": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "pretty": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
