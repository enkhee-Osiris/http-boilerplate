# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[{*.js,*.jsx,*.json,*.yml}]
indent_size = 2

[{package.json,.editorconfig,.eslintrc}]
indent_size = 2

[{*.md}]
trim_trailing_whitespace = false

[*.org]
indent_size = 0
